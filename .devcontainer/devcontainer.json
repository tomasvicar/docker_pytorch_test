{
    "name": "Python Dev Container with Git",
    "context": "..",
    "dockerFile": "Dockerfile",
    "settings": { 
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "GitHub.copilot"
    ],
    "forwardPorts": [
        8888
    ],
    "postCreateCommand": "pip install -r requirements.txt",
    "remoteUser": "root"
}